<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
        <androidx.cardview.widget.CardView
            app:cardElevation="@dimen/cardview_shadowVoucher"
            cardBackgroundColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardviewHeightVoucher"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/radiusCardView"
            >
            <LinearLayout
                android:weightSum="12"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7">
                    <ImageView
                        android:src="@drawable/imv_title_voucher"
                        android:scaleType="fitXY"
                        android:id="@+id/imvService"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/margin8dp"
                    android:padding="@dimen/padding5dp"
                    android:orientation="vertical"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="4">
                    <TextView
                        android:id="@+id/nameVoucher"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/fontMediumSmall"
                        android:textStyle="bold"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:lines="@integer/maxline1"
                        android:textColor="@color/colorBlack"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/margin8dp"
                        android:id="@+id/voucherDetail"
                        android:textColor="@color/colorGray"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:ellipsize="end"
                        android:lines="@integer/maxline2"
                        android:lineHeight="@dimen/lineHeightMedium"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/margin8dp"
                        android:id="@+id/readMoreDetail"
                        android:textColor="@color/colorOrange"

                        android:gravity="center"
                        android:text="@string/readMore"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

</layout>
