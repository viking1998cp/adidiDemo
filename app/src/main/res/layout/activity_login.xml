<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_login"
        android:orientation="vertical"
        tools:context=".Activity.RegisterActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/ToolBarTheme.ToolBarStyle"
            android:theme="@style/ToolBarTheme.ToolBarStyle"
            app:title="@string/login"

           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/mytablayout"
                android:layout_width="@dimen/widthTabLogin"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14dp"
                app:tabIndicatorColor="@color/colorOrangeYellow"
                app:tabIndicatorHeight="2pt"
                app:tabMode="fixed"
                android:layout_marginBottom="@dimen/margin16dp"
                app:tabTextColor="@color/colorWhite" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>


    </LinearLayout>
</layout>
