<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

    </style>

    <!-- style for toolbar -->
    <style name="ToolBarTheme.ToolBarStyle"
        parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textSize">2dp</item>
    </style>

    <style name="ToolBarTheme.ToolBarStyleHomePage"
        parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorOrangeYellow</item>

    </style>

    <!-- style for button form login -->
    <style name="button.Login"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_marginTop">@dimen/margin16dp</item>
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="translucentDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="textTitleHomePage" >
        <item name="android:padding">@dimen/padding5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize"> @dimen/fontMedium</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="cardViewHomePage" >

        <item name="android:padding">@dimen/padding10dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_width">@dimen/cardviewWidth</item>
        <item name="android:layout_height">@dimen/cardviewHeight</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="navigationBottomStyle">
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="textService">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:layout_weight">6</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="linearServiceFragment">

        <item name="android:padding"> @dimen/padding10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_round_white</item>
    </style>

    <style name="textLocation">
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:colorControlNormal">@color/colorGray1</item>
    </style>

    <style name="textViewButtonDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">@dimen/text_medium_letter_spacing</item>
        <item name="android:lines">1</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">@integer/shadowDialog</item>
        <item name="android:shadowRadius">@integer/radiusButtonDialog</item>
        <item name="android:text">@string/choose</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">@dimen/fontMedium</item>
    </style>

    <integer name="radiusButtonDialog">1</integer>
    <string name="choose">Ch·ªçn</string>
</resources>
