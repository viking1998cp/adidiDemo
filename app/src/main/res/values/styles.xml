<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        
    </style>

    <!-- style for toolbar -->
    <style name="ToolBarTheme.ToolBarStyle"
        parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textSize">2dp</item>
    </style>

    <style name="ToolBarTheme.ToolBarStyleHomePage"
        parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorOrangeYellow</item>

    </style>

    <!-- style for button form login -->
    <style name="button.Login"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_marginTop">@dimen/margin16dp</item>
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="translucentDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="textTitleHomePage" >
        <item name="android:padding">@dimen/padding5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize"> @dimen/fontMedium</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="cardViewHomePage" >

        <item name="android:padding">@dimen/padding10dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_width">@dimen/cardviewWidth</item>
        <item name="android:layout_height">@dimen/cardviewHeight</item>
    </style>

    <style name="navigationBottomStyle">
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
